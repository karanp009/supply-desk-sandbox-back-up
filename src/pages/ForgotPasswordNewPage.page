<apex:page showHeader="false" sidebar="false" controller="RC_ForgotYourPasswordController" action="{!redirectAuthenticatedUser}">
    <html>
        <head>
            <style>
                .container {
                    position: relative;
                    width: 100%;
                    min-height: 100vh;
                    background-color: var(--bg-color);
                    overflow: hidden;
                    /* background-image: url(https://supplydesk--mvcdev--c.visualforce.com/resource/1656478070000/LoginPageImage?); */
                    background-image: '{!URLFOR($Resource.loginbg)}';
                    background-repeat: no-repeat;
                    background-size: cover;

                }
                .forms-container {
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    top: 0;
                    left: 0;
                }

                .logo_cls {
                    position: absolute;
                    top: 44%;
                    width: 42%;
                    display: flex;
                    justify-content: center;
                    margin: 0 4%;
                }

                .signin-signup {
                    position: absolute;
                    top: 50%;
                    left: 75%;
                    transform: translate(-50%, -50%);
                    width: 50%;
                    display: grid;
                    grid-template-columns: 1fr;
                    z-index: 5;
                    transition: 1s 0.7s ease-in-out;
                    border-left: 1px solid black;
                }

                .sign-in-form {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    flex-direction: column;
                    padding: 0 5rem;
                    overflow: hidden;
                    grid-column: 1 / 2;
                    grid-row: 1 / 2;
                    transition: 0.2s 0.7s ease-in-out;
                }

                .sign-in-form .sign-in-form {
                    z-index: 2;
                }

                .sign-in-form .sign-up-form {
                    z-index: 1;
                    opacity: 0;
                }

                /* MODAL */

                .title {
                    font-family: 'Raleway';
                    font-size: 40px;
                    color: #000000;
                    margin-bottom: 10px;
                    display: flex;
                    justify-content: center;
                }

                .subtitle {
                    font-family: 'Raleway';
                    font-size: 22px;
                    color: #000000;
                }

                .input-field {
                    height: 45px;
                    margin: 7% 1% 2% 1%;
                    display: flex;
                    padding: 0 0.4rem;
                    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                    background: #F6F6F6;
                }

                .input-field img {
                    display: flex;
                    /* margin: auto; */
                    /* border-right: 1px solid black; */
                    padding-right: 10px;
                    height: 75%;
                    margin-top: 2.5%;
                }

                .pass {
                    /* color: red; */
                    margin: 36%;
                    font-weight: 400;
                    text-decoration: none;
                }

                .pass:hover {
                    text-decoration: underline;
                }

                .pass:hover {
                    color: red;
                }

                .bklog {
                    margin: 4% 1%;
                    font-size: 15px;    
                }

                .input-field input {
                    background: none;
                    outline: none;
                    border: none;
                    line-height: 1;
                    font-weight: 600;
                    font-size: 1.1rem;
                    color: var(--input);
                }

                .input_cls {
                    /* margin: auto 0; */
                    width: 100%;
                    border-left: 1px solid black;
                    margin-top: 1.5%;
                    margin-bottom: 1.5%;
                }

                .input-field input::placeholder {
                    color: var(--input-hover);
                    font-weight: 500;
                }

                .btn_cls {
                    cursor: pointer;
                    padding: 2% 8%;
                    width: auto;
                    font-size: 20px;
                    background: #D2232A;
                    color: white;
                    margin-left: 22%;
                    margin-top: 7%;
                }

                .errormsgcls {
                    color: red;
                    font-size: 16px;
                    font-weight: 700;
                }

                .errorMsg {
                    display: none;
                    color: red;
                    text-align: center;
                    height: 7px;
                    font-size: 13px;
                    margin-left: 2%;
                }

                /* ANIMATION */

                .container.sign-up-mode:before {
                    transform: translate(100%, -50%);
                    right: 52%;
                }

                .container.sign-up-mode .left-panel .image,
                .container.sign-up-mode .left-panel .content {
                    transform: translateX(-800px);
                }

                .container.sign-up-mode .right-panel .content,
                .container.sign-up-mode .right-panel .image {
                    transform: translateX(0px);
                }

                .container.sign-up-mode .left-panel {
                    pointer-events: none;
                }

                .container.sign-up-mode .right-panel {
                    pointer-events: all;
                }

                .container.sign-up-mode .signin-signup {
                    left: 25%;
                }

                .container.sign-up-mode .sign-in-form .sign-in-form {
                    z-index: 1;
                    opacity: 0;
                }

                .container.sign-up-mode .sign-in-form .sign-up-form {
                    z-index: 2;
                    opacity: 1;
                }

                @media (max-width: 1024px){
                    .forms-container{
                        display: block;
                    }

                    .logo_cls {
                        position: absolute;
                        top: 9%;
                        width: 66%;
                        display: flex;
                        justify-content: center;
                        margin: 0 17%;
                    }

                    .signin-signup {
                        top: 50%;
                        width: 100%;
                        display: grid;
                        margin: 0 50%;
                        left: 0;
                        border-left: 0px solid black;
                    }

                    .input-field{
                        margin: 25px 0;
                    }

                    .sign-in-div{
                        width: 60%;
                    }

                    .sign-in-div h2{
                        font-size: 60px;
                    }

                    .sign-in-div p{
                        font-size: 25px;
                    }

                    .sign-in-div a{
                        font-size: 23px;
                    }
                }

                @media (max-width: 870px) {
                    .sign-in-div{
                        width: 70%;
                    }
                }

                @media (max-width: 760px) {
                    .sign-in-div{
                        width: 80%;
                    }
                }


                @media (max-width: 680px) {
                    .sign-in-div{
                        width: 90%;
                    }
                }

                @media (max-width: 620px) {
                    .sign-in-div{
                        width: 100%;
                    }

                    .sign-in-form{
                        padding: 0 2rem ;
                    }

                    .logo_cls{
                        width: 100%;
                        padding: 0 10%;
                        margin: 0;
                    }
                }

                @media (max-width: 500px){
                    .sign-in-div h2{
                        font-size: 40px;
                    }

                    .sign-in-div p{
                        font-size: 20px;
                    }

                    .sign-in-div a{
                        font-size: 18px;
                    }
                }

                @media (max-width: 400px){
                    .sign-in-div p{
                        font-size: 18px;
                    }
                }

                /* =================== Spinner =================== */

                .spinner-center {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                .spinner-ts {
                    --size: 85px;

                    width: var(--size);
                    height: var(--size);

                    border-radius: 50%;
                    perspective: 800px;
                }

                .inner {
                    position: absolute;
                    box-sizing: border-box;
                    width: 100%;
                    height: 100%;
                    border-radius: 50%;
                    border: 3px solid transparent;
                }

                .inner.one {
                    left: 0;
                    top: 0;
                    animation: rotate-one 1s linear infinite;
                    border-bottom: 3px solid #999999;
                }

                .inner.two {
                    right: 0;
                    top: 0;
                    animation: rotate-two 1s linear infinite;
                    border-right: 3px solid #000000;
                }

                .inner.three {
                    right: 0;
                    bottom: 0;
                    animation: rotate-three 1s linear infinite;
                    border-top: 3px solid #d90000;
                }

                @keyframes rotate-one {
                    0% {
                        transform: rotateX(35deg) rotateY(-45deg) rotateZ(0deg);
                    }

                    100% {
                        transform: rotateX(35deg) rotateY(-45deg) rotateZ(360deg);
                    }
                }

                @keyframes rotate-two {
                    0% {
                        transform: rotateX(50deg) rotateY(10deg) rotateZ(0deg);
                    }

                    100% {
                        transform: rotateX(50deg) rotateY(10deg) rotateZ(360deg);
                    }
                }

                @keyframes rotate-three {
                    0% {
                        transform: rotateX(35deg) rotateY(55deg) rotateZ(0deg);
                    }

                    100% {
                        transform: rotateX(35deg) rotateY(55deg) rotateZ(360deg);
                    }
                }

                /* =================== Spinner =================== */
            </style>
            <script>
                //Prevent Enter Key Refresh
                var jq=jQuery.noConflict();
                jq(document).keypress(function(e) {
                    if(e.which == 13) {
                        
                        if(e.target.id.indexOf('password') > 0 ||  e.target.id.indexOf('username'))
                        {
                            validateUserName();
                            e.preventDefault();
                        }
                    }
                });
                             
                //Checking with validation('Empty' and 'Format')
                function validateUserName()
                {
                    var inputTextValue = document.getElementById('{!$Component.idForm.username}').value;
                    var userNameFormat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
                   
                    if(inputTextValue != null && inputTextValue != '' && inputTextValue.match(userNameFormat))
                    {  
                        document.getElementById('errorDivToAdd').style.display = 'none';
                        console.log('Calling function...');
                        forgotPwd();
                    }  
                   else { 
                        document.getElementById('errorDivToAdd').style.display = 'inline';
                        document.getElementById('errorDivToAdd').innerHTML = 'Enter a valid user name';
                    }
                }
               
                //To show the error after controller validation
                function validationResult(varSuccess)
                {
                    if(varSuccess == 'true')
                    {  
                        document.getElementById('errorDivToAdd').style.display = 'none';
                    }  
                    else 
                    { 
                        document.getElementById('errorDivToAdd').innerHTML = 'Error: The entered user name doesnot match any records in our system. Please enter a valid user name';
                        document.getElementById('errorDivToAdd').style.display = 'inline';
                    }
                }
           </script> 
        </head>
        <body>
            <div class="container" style="background-image: url('{!$Resource.loginbg}') !important;">
                <div class="forms-container">
                    <div class="logo_cls">
                        <apex:image height="100" width="500" value="{!URLFOR($Resource.communityicons, '/communityicons/supplydesk_logo.png')}" />
                    </div>
                    <div class="signin-signup">
                        <div class="sign-in-form">
                            <div class="sign-in-div">
                                <h2 class="title">Forgot Password?</h2>
                                <p class="subtitle">No worries, weâ€™ll send you reset instructions.</p>

                                <apex:form id="idForm">
                                    <apex:actionFunction action="{!forgotPassword}" name="forgotPwd" rerender="dummy" onComplete="validationResult('{!blnSuccess}');"/>

                                    <div class="input-field">
                                        <apex:image value="{!URLFOR($Resource.communityicons, '/communityicons/email.png')}" />
                                        <apex:inputText id="username" styleClass="input_cls" value="{!strUsername}" html-placeholder="Enter Username" />
                                        <!-- <input id="username" class="input_cls" type="text" name="username" autocomplete="" placeholder="Enter Username" value="{!strUsername}" required="yes" /> -->
                                    </div>

                                    <div class="errorMsg" id="errorDivToAdd"></div>
                                    
                                    <div class="slds-p-top_medium slds-wrap slds-grid">
                                        <input type="button" value="Reset Password" class="btn_cls slds-col slds-m-horizontal_medium" onClick="validateUserName();" />
                                    </div>
                                </apex:form>

                                <div class="bklog">
                                    <a class="pass" href="/s/login">&#x2190; &nbsp;Back to login</a>
                                </div>
                            </div>
        
                        </div>
                    </div>
                </div>
            </div>
        </body>
    </html>
    
</apex:page>